<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>loginBean</managed-bean-name>
		<managed-bean-class>com.tutorial.LoginBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>item</managed-bean-name>
		<managed-bean-class>Beans.Item</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>items</managed-bean-name>
		<managed-bean-class>Beans.Items</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>Admin/adminProductList.xhtml</display-name>
		<from-view-id>/Admin/adminProductList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>CreateItem</from-outcome>
			<to-view-id>/Admin/createItem.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Admin/adminProductList.xhtml</display-name>
		<from-view-id>/Admin/adminProductList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>ModifyItem</from-outcome>
			<to-view-id>/Admin/modifyItem.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Admin/adminProductList.xhtml</display-name>
		<from-view-id>/Admin/adminProductList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>AdjustItem</from-outcome>
			<to-view-id>/Admin/adjustItem.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Admin/createItem.xhtml</display-name>
		<from-view-id>/Admin/createItem.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Create</from-outcome>
			<to-view-id>/Admin/adminProductList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Admin/modifyItem.xhtml</display-name>
		<from-view-id>/Admin/modifyItem.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Modify</from-outcome>
			<to-view-id>/Admin/adminProductList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Admin/adjustItem.xhtml</display-name>
		<from-view-id>/Admin/adjustItem.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>Adjust</from-outcome>
			<to-view-id>/Admin/adminProductList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Admin/login.xhtml</display-name>
		<from-view-id>/Admin/login.xhtml</from-view-id>
		<navigation-case>
			<to-view-id>/Admin/adminProductList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
